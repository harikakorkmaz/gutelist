<div class="container">
<% provide(:title, @title) %>
  <div class="row">
    <div class="col-xs-12">
      <h3><%= @title %></h3>
      <table class="table">
        <thead>
          <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
              <td><%= attachment_image_tag(user, :image, :fill, 50, 50) %></td>
              <td><%= user.name %></td>
              <td>フォロー数:<%= user.followings.count %></td>
              <td>フォロワー数:<%= user.followers.count %></td>
              <td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
          　</tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>