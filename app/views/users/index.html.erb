<div class="container">
	<div class="row">
		<div class="main_group col-xs-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th class="text-center" style="width:25%"><h2><i class="fas fa-crown"></i> ランキング</h2></th>
						<th style="width:10%"></th>
						<th style="width:55%"></th>
						<th style="width:10%"></th>
					</tr>
				</thead>
				<tbody>
					<% @all_ranks.each.with_index(1) do |user, i| %>
					<tr>
						<td class="text-center"><h3><%= i %>位</h3></td>
						<td>
							<%= link_to user_path(user.id) do %>
								<%= attachment_image_tag(user, :image, size: "50x50") %>
							<% end %>
						</td>
						<td class="user_name">
							<%= link_to user_path(user.id) do %>
								<h4><%= user.name %></h4>
							<% end %><br>
						</td>
						<td>
							<div class="text-center">
								<% if current_user.following?(user) %>
								  <i class="fas fa-user-friends fa-2x"></i>
								  <p>フォロー中</p>
								<% end %>
							</div>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>