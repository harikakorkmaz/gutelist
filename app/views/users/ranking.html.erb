<div class="container">
	<div class="row">
		<div class="main_group col-xs-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<h2 class="text-center"><i class="fas fa-crown"></i> ランキング</h2>
						<th></th>
						<th></th>
						<th></th>
						<th ></th>
					</tr>
				</thead>
				<tbody>
					<% @ranking.each.with_index(1) do |user, i| %>
					<tr>
						<td class="text-center"><h3><%= i %>位</h3></td>
						<td>
							<%= link_to user_path(user.id) do %>
								<%= attachment_image_tag(user, :image, size: "50x50", fallback: "noImg.jpg", size: "50x50") %>
							<% end %>
						</td>
						<td class="user_name">
							<%= link_to user_path(user.id) do %>
								<h4><%= user.name %></h4>
							<% end %><br>
						</td>
						<td>
							<div class="text-center">
								<% if current_user.following?(user) %>
								  <i class="fas fa-user-circle fa-3x"></i>
								<% end %>
							</div>
						</td>
					</tr>
						<% break if i == 20 %>
					<% end %>
				</tbody><br>
			</table><br>
		</div><br>
	</div><br>
	<div class="row">
        <div class="col-xs-12">
            <%= link_to "ユーザー一覧", users_path, class: "btn btn-warning btn-lg btn-block" %><br>
        </div><br>
    </div>
</div><br>