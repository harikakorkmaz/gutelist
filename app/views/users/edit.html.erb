
<%= form_with model: @user, local: true do |f| %>
	<!-- エラーメッセージ表示-->
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h3><%= @user.errors.count %></h3>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
				<li>error<%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- エラーメッセージ表示-->
	
	<label>Name </label><%= f.text_field :name %><br>
	<label>Image </label><!--%-= f.attachment_field :image_id %--><br>
	<label>Introduction </label><%= f.text_area :introduction %>
	<div class="actions"><%= f.submit "保存" %></div>

<% end %>