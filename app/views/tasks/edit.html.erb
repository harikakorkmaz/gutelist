<%= form_with model: @task, local:true do |f| %>
  <% if @task.errors.any? %>
    <% task.errors.full_messages.each do |message| %>
      <li>error <%= message %></li>
    <% end %>
  <% end %>
  <div class="field row">
    <%= f.label :task_ja %>
    <%= f.text_field :task_ja %>
  </div>

  <div class="field row">
    <%= f.label :task_en %>
    <%= f.text_field :task_en %>
  </div>
  
  <div class="actions row">
    <%= f.submit "編集内容を保存する", method: :patch %>
  </div>
<% end %>

    <%= link_to "削除", task_path(@task.id), method: :delete, class: "btn btn-danger pull-right" %>
