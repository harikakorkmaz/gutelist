
<%= link_to "作成する", new_task_path %>
<div class="active_tasks">
    <% @active_tasks.each do |task| %>
        <%= task.task_en %>
        <%= task.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <%= link_to "完了", change_task_path(task.id), method: :patch %><br>
    <% end %>
</div><br><br>
    
<div class="passive_tasks">
    <% @passive_tasks.each do |task| %>
        <%= task.task_en %>
        <%= task.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
    <% end %>
</div><br>


<div class="tasks">
    <% @tasks.each do |task| %>
        <%= task.task_en %>
        <%= task.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <%= link_to "edit",edit_task_path(task.id) %>
        <%= task.is_active %><br>
    <% end %>
</div